{% extends 'base.html.twig' %}

{% block title %}Index commentaires{% endblock %}

{% block body %}
    <h1>Index commentaires</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Commentaire</th>
            <th>Classement</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.rate }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">Voir</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de commentaire</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comment_new')}}">Nouveau commentaire</a>
{% endblock %}